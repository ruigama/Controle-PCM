<Window x:Class="Controle_PCM.Views.Inicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

        
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

        
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        
xmlns:local="clr-namespace:Controle_PCM.Views"
        mc:Ignorable="d"
        Title="Inicio" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="{DynamicResource {x:Static SystemColors.WindowBrush}}">
        <Menu Background="{DynamicResource {x:Static SystemColors.ControlBrush}}">
            <MenuItem Header="_Arquivo">
                <MenuItem Header="_Novo" Click="MenuItem_Novo_Click"/>
                <MenuItem Header="_Abrir" />
                <Separator />
                <MenuItem Header="_Sair" Click="MenuItem_Sair_Click"/>
            </MenuItem>

            <MenuItem Header="_Pesquisar">
                <MenuItem Header="_Consultar Cadastro" Click="MenuItem_Pesquisa_Click"/>
            </MenuItem>
        </Menu>

        <StackPanel Orientation="Vertical" Margin="8,25,10,10">
            <Button Content="Novo Cadastro" Click="Button_AbrirFormulario_Click" Width="150" Height="50" Margin="0,0,0,10"/>
            <Button Content="Consultar Cadastro" Click="Button_AbrirPesquisa_Click" Width="150" Height="50"/>
        </StackPanel>
    </Grid>
</Window>